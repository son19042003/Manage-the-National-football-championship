@model Football_Management.Areas.Admin.ViewModels.NewsPages.DeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Pages </a> </li>
        <li class="breadcrumb-item active" aria-current="page">News pages </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Pages </a> </li>
        <li class="breadcrumb-item">
            <a asp-controller="NewsPages" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">News pages  </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Delete </li>
    </ol>
</nav>

<div class="card card-default">
    <div class="card-body">
        <h3 class="text-danger" style="margin-bottom: 10px">Are you sure you want to delete the following news?</h3>
        <table class="table table-light">
            <thead>
                <tr>
                    <th scope="col">News id:</th>
                    <th scope="col">@Model.NewsId</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">Title:</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td scope="row">Date updated:</td>
                    <td>@Model.DateUpdated</td>
                </tr>
                <tr>
                    <td scope="row">Type news:</td>
                    <td>@Model.TypeNewsName</td>
                </tr>
                <tr>
                    <td scope="row">View mode:</td>
                    <td>
                        @if (Model.Status == true)
                        {
                            <span class="badge badge-success">Shown</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Hidden</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td scope="row">Thumbnail:</td>
                    <td>
                        <img src="~/Assets/images/news/thumbnail/@Model.ImageUrl" alt="Thumbnail" style="height: 60px; width: 60px" />
                    </td>
                </tr>
                <tr>
                    <td scope="row">Image content:</td>
                    <td>
                        <img src="~/Assets/images/news/content/@Model.ImgContentUrl" alt="Image_content" style="height: 60px; width: 60px" />
                    </td>
                </tr>
                <tr>
                    <td scope="row">Content:</td>
                    <td>@Model.Content</td>
                </tr>
            </tbody>
        </table>
        <form style="margin-top: 15px" method="post" asp-controller="NewsPages" asp-action="Delete">
            <input type="hidden" name="id" value="@Model.NewsId" />
            <label class="text-danger" for="ConfirmDelete">Confirm Delete?</label>
            <div class="form-check d-inline-block mr-3 mb-3">
                <input class="form-check-input" type="checkbox" id="ConfirmDelete" name="ConfirmDelete" value="true" />
                <label class="form-check-label" for="ConfirmDelete">Yes, I want to delete this news.</label>
            </div>

            <div class="form-footer mt-6">
                <button type="submit" class="mb-1 btn btn-pill btn-danger">Submit</button>
                <a class="btn btn-light btn-pill" asp-controller="NewsPages" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">Cancel</a>
            </div>
        </form>
    </div>
</div>
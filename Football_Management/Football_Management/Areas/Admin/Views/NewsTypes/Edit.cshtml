@model Football_Management.Areas.Admin.ViewModels.NewsTypes.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Pages </a> </li>
        <li class="breadcrumb-item active" aria-current="page">News types </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Pages </a> </li>
        <li class="breadcrumb-item">
            <a asp-controller="NewsTypes" asp-action="Index">News types  </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit </li>
    </ol>
</nav>

<div class="card card-default">
    <div class="card-body">
        <h2>News type: @Model.TypeNewsName</h2>
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TypeNewsId" />
            <div class="form-group">
                <label asp-for="TypeNewsName">News type name</label>
                <input class="form-control" asp-for="TypeNewsName">
                <span class="mt-2 d-block" asp-validation-for="TypeNewsName"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeNewsDescription">News type description</label>
                <input class="form-control" asp-for="TypeNewsDescription">
                <span class="mt-2 d-block" asp-validation-for="TypeNewsDescription"></span>
            </div>
            <div class="form-footer mt-6">
                <button type="submit" class="btn btn-primary btn-pill">Submit</button>
                <a class="btn btn-light btn-pill" asp-controller="NewsTypes" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
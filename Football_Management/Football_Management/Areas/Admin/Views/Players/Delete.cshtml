@model Football_Management.Areas.Admin.ViewModels.Players.DeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Team </a> </li>
        <li class="breadcrumb-item active" aria-current="page">Players </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Team </a> </li>
        <li class="breadcrumb-item">
            <a asp-controller="Players" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">Players  </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Delete </li>
    </ol>
</nav>

<div class="card card-default">
    <div class="card-body">
        <h3 class="text-danger" style="margin-bottom: 10px">Are you sure you want to delete the following player?</h3>
        <table class="table table-light">
            <thead>
                <tr>
                    <th scope="col">Player's id:</th>
                    <th scope="col">@Model.PlayerId</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">Player's name:</td>
                    <td>
                        <img src="~/Assets/images/player/@Model.AvatarUrl" alt="Logo" style="height: 60px; width: 60px" />
                        <span style="margin-left: 10px">@Model.FirstName @Model.LastName</span>
                    </td>
                </tr>
                <tr>
                    <td scope="row">Club:</td>
                    <td>@Model.ClubName</td>
                </tr>
                <tr>
                    <td scope="row">Birthday:</td>
                    <td>@Model.Birthday</td>
                </tr>
                <tr>
                    <td scope="row">Height:</td>
                    <td>@Model.Height (cm)</td>
                </tr>
                <tr>
                    <td scope="row">Nationality:</td>
                    <td>
                        <span>@Model.Nationality</span>
                        @if (Model.DomesticPlayer)
                        {
                            <span class="badge badge-square badge-outline-info"> Domestic player</span>
                        }
                        else
                        {
                            <span class="badge badge-square badge-outline-warning"> Foreign player</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td scope="row">Position:</td>
                    <td>@Model.Position</td>
                </tr>
                <tr>
                    <td scope="row">Number:</td>
                    <td>@Model.Number</td>
                </tr>
                <tr>
                    <td scope="row">Link Facebook:</td>
                    <td>@Model.LinkFb</td>
                </tr>
                <tr>
                    <td scope="row">Link Instagram:</td>
                    <td>@Model.LinkIg</td>
                </tr>
                <tr>
                    <td scope="row">Goals:</td>
                    <td>@Model.Goals</td>
                </tr>
                <tr>
                    <td scope="row">Is in club?</td>
                    <td>
                        @if (Model.IsInClub)
                        {
                            <span class="badge badge-success">In</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Has left</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
        <form style="margin-top: 15px" method="post" asp-controller="Players" asp-action="Delete">
            <input type="hidden" name="id" value="@Model.PlayerId" />
            <label class="text-danger" for="ConfirmDelete">Confirm Delete?</label>
            <div class="form-check d-inline-block mr-3 mb-3">
                <input class="form-check-input" type="checkbox" id="ConfirmDelete" name="ConfirmDelete" value="true" />
                <label class="form-check-label" for="ConfirmDelete">Yes, I want to delete this player.</label>
            </div>

            <div class="form-footer mt-6">
                <button type="submit" class="mb-1 btn btn-pill btn-danger">Submit</button>
                <a class="btn btn-light btn-pill" asp-controller="Players" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">Cancel</a>
            </div>
        </form>
    </div>
</div>
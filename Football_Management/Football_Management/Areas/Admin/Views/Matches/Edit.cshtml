@model Football_Management.Areas.Admin.ViewModels.Matches.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Matches </a> </li>
        <li class="breadcrumb-item active" aria-current="page">Match results </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Matches </a> </li>
        <li class="breadcrumb-item">
            <a asp-controller="Matches" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">Match results  </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit </li>
    </ol>
</nav>

<div class="card card-default">
    <div class="card-body">
        <h2>Round: @Model.Round</h2>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MatchId" />
            <input type="hidden" asp-for="PageNumber" />
            <div class="form-group">
                <label asp-for="HomeTeam">Home team</label>
                <input class="form-control" asp-for="HomeTeam" readonly>
                <span class="mt-2 d-block" asp-validation-for="HomeTeam"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalH">Goals of home team</label>
                <input class="form-control" asp-for="GoalH">
                <span class="mt-2 d-block" asp-validation-for="GoalH"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam">Away team</label>
                <input class="form-control" asp-for="AwayTeam" readonly>
                <span class="mt-2 d-block" asp-validation-for="AwayTeam"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalA">Goals of away team</label>
                <input class="form-control" asp-for="GoalA">
                <span class="mt-2 d-block" asp-validation-for="GoalA"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stadium">Stadium</label>
                <input class="form-control" asp-for="Stadium">
                <span class="mt-2 d-block" asp-validation-for="Stadium"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart">Date start</label>
                <input type="date" class="form-control" asp-for="DateStart">
                <span class="mt-2 d-block" asp-validation-for="DateStart"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStart">Time start</label>
                <input type="time" class="form-control" asp-for="TimeStart">
                <span class="mt-2 d-block" asp-validation-for="TimeStart"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control" id="exampleFormControlSelect12">
                    @foreach(var option in Model.StatusOptions)
                    {
                        <option value="@option.Value" selected="@(option.Value == Model.Status)">
                            @option.Text
                        </option>
                    }
                </select>
            </div>
            <div class="form-footer mt-6">
                <button type="submit" class="btn btn-primary btn-pill">Submit</button>
                <a class="btn btn-light btn-pill" asp-controller="Matches" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]">Cancel</a>
            </div>
        </form>
    </div>
</div>
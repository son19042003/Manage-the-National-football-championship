@model Football_Management.Areas.Admin.ViewModels.Clubs.DetailViewModel

@{
    ViewData["Title"] = "Detail";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Team </a> </li>
        <li class="breadcrumb-item active" aria-current="page">Information </li>
    </ol>
</nav>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="home" asp-action="Index">Home  </a>
        </li>
        <li class="breadcrumb-item">  <a>Team </a> </li>
        <li class="breadcrumb-item">
            <a asp-controller="Clubs" asp-action="Index">Information  </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Detail </li>
    </ol>
</nav>

<div class="card card-default">
    <div class="card-body">
        <table class="table table-light">
            <thead>
                <tr>
                    <th scope="col">Club's name:</th>
                    <th scope="col">@Model.ClubName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row">Club's id:</td>
                    <td>@Model.ClubId</td>
                </tr>
                <tr>
                    <td scope="row">Short name:</td>
                    <td>@Model.ShortName</td>
                </tr>
                <tr>
                    <td scope="row">Logo:</td>
                    <td>
                        <img src="~/Assets/images/logo/@Model.LogoUrl" alt="Logo" style="height: 60px; width: 60px" />
                    </td>
                </tr>
                <tr>
                    <td scope="row">Stadium:</td>
                    <td>@Model.Stadium</td>
                </tr>
                <tr>
                    <td scope="row">Link Facebook:</td>
                    <td>@Model.LinkFb</td>
                </tr>
                <tr>
                    <td scope="row">Link Instagram:</td>
                    <td>@Model.LinkIg</td>
                </tr>
                <tr>
                    <td scope="row">Current number of players:</td>
                    <td>@Model.TotalPlayers</td>
                </tr>
                <tr>
                    <td scope="row">Is active?</td>
                    <td>
                        @if (Model.IsActive)
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Eleminated</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
        <div style="margin-top: 20px">
            <a class="btn btn-sm btn-info" asp-action="Index">Back to list</a> |
            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.ClubId">Edit</a>
        </div>
    </div>
</div>